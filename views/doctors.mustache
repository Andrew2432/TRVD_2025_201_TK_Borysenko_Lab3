{{> header}}

<h1>Список лікарів</h1>

<ul>
  {{#doctors}}
    <li>
      <strong>{{name}}</strong><br>
      Спеціалізація: {{specialization}}<br>
      Телефон: {{phone}}<br>
      Email: {{email}}<br>
      {{#photo}}
        <img src="{{photo}}" alt="{{name}}" style="height:100px;"><br>
      {{/photo}}

      <a href="/doctors/{{_id}}/edit">Редагувати</a>
      <form action="/doctors/{{_id}}/delete" method="POST" style="display:inline;">
        <button type="submit">Видалити</button>
      </form>
    </li>
    <hr>
  {{/doctors}}
  {{^doctors}}
    <li>Лікарі не знайдені</li>
  {{/doctors}}
</ul>

<h2>Додати лікаря</h2>
<form action="/doctors" method="POST" enctype="multipart/form-data">
  <input type="text"  name="name"           placeholder="Ім'я лікаря"       required><br>
  <input type="text"  name="specialization" placeholder="Спеціалізація"     required><br>
  <input type="text"  name="phone"          placeholder="Телефон"><br>
  <input type="email" name="email"          placeholder="Email"><br>
  <input type="file"  name="photo"          accept="image/*"><br>
  <button type="submit">Додати</button>
</form>

{{> footer}}